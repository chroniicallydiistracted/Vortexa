{
  "name": "westfam-weather-foundation",
  "private": true,
  "workspaces": [
    "web",
    "services/proxy",
    "services/alerts",
    "services/shared"
  ],
  "scripts": {
    "dev": "concurrently -n proxy,web -c blue,green \"npm:dev --ws --if-present --silent --workspace=services/proxy\" \"npm:dev --ws --if-present --silent --workspace=web\"",
    "build": "npm -w web run build",
    "deploy": "bash scripts/deploy.sh"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}