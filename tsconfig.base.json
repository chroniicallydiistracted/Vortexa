{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@proxy/*": ["services/proxy/src/*"],
      "@alerts/*": ["services/alerts/src/*"],
      "@shared/*": ["services/shared/src/*"]
    }
  }
}
